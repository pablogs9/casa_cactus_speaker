{
	"name": "espidf",
	"image": "espressif/idf:release-v5.4",

	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},

	"runArgs": [ 	"--cap-add=SYS_PTRACE",
					"--security-opt",
					"seccomp=unconfined",
					"--net=host",
					"--privileged=true",
					"-v", "/dev:/dev",
					"-e", "DISPLAY=${env:DISPLAY}",
					"-v", "/tmp/.X11-unix:/tmp/.X11-unix"],
}